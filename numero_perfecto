def es_numero_perfecto():
    num = int(input("Ingresa un número: "))
    suma_divisores = sum(i
                         for i in range(1, num) if num % i == 0)
    if suma_divisores == num:
        print(str(num)+ "es un número perfecto")
    else:
        print(str(num)+ "no es un número perfecto")

es_numero_perfecto()
