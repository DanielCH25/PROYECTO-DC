#Este programa dibuja un cuadrado de las dimensiones que le digamos.
def triangulo_invertido():
  n_filas=int(input("Tamaño que quieres del triangulo: "))
  #Esto es un bucle anidado(nested)
  for filas in range(n_filas, 0 ,-1):
    for columnas in range(1, filas+1):
        print('x', end='')
    print() #\n hace un salto de línea
    
triangulo_invertido()
